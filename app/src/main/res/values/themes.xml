<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base M3 DayNight theme without ActionBar -->
    <style name="Base.Theme.OuiOui" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryContainer">@color/primary_variant</item>
        <item name="colorOnPrimaryContainer">@android:color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="colorSecondaryContainer">@color/secondary_variant</item>
        <item name="colorOnSecondaryContainer">@android:color/black</item>

        <!-- Background & surface -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <!-- Your app theme, inheriting DayNight behavior -->
    <style name="Theme.OuiOui" parent="Base.Theme.OuiOui" />

    <!-- Elevated cards -->
    <style name="OuiOui.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background_light</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Outlined button -->
    <style name="OuiOui.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="shapeAppearance">@style/Shape.Corner.Rounded8</item>
    </style>

    <!-- Roundedâ€corner shape -->
    <style name="Shape.Corner.Rounded8" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Text appearances -->
    <style name="OuiOui.Text.Title" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="OuiOui.Text.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>
    <style name="OuiOui.Text.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

</resources>
